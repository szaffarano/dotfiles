#!/usr/bin/env bash


read -r -d '' USAGE << EOM
$(basename "$0") merges two or more jars in a new one

Usage:
    $(basename "$0") <final jar> <jar 1> <jar 2> [<jar 3> ... <jar n>]

EOM
export USAGE

BASE=$( cd "$(dirname "$0")" || exit; pwd )

# shellcheck source=/dev/null
source "$BASE/common.sh"

checkParamsAtLeast $# 3

final=$(realpath "$1")
jars=( "${@:2}" )

pivot=$(mktemp -d)
trap '{ rm -rf "$pivot"; }' EXIT

list=()
for jar in "${jars[@]}"; do
  isValidFile "$jar"
  list+=("$(realpath "$jar")")
done

pushd > /dev/null "$pivot" || die "Error entering in temp dir"

for jar in "${list[@]}"; do
  echo -n "."
  jar xf "$jar"
done

jar cf "$final" .
echo "done!"

popd > /dev/null || die "Error returning to original dir"

