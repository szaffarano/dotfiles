#!/bin/bash

FOUND=$(jps -v \
	| grep Bootstrap \
	| grep -v Studio \
	| awk '{ print $1 }' \
)

M_INSTANCES=$(echo "$FOUND" | wc -w)

if [[ -z "$FOUND" ]]; then
	echo "No mule runtime instance running"
	exit 1
elif [[ $M_INSTANCES -gt 1 ]]; then
	echo "$M_INSTANCES instances of mule runtime found, expected 1: $FOUND"
	exit 2
else
	echo "$FOUND"
fi
