#!/usr/bin/zsh

function die {
  echo $1
  exit 1
}

[ -n "$TASK_REPO" ] || die "TASK_REPO environment variable not defined"

ARGS=(-C $TASK_REPO)

git $ARGS status > /dev/null 2>&1 \
  || die "$TASK_REPO is not a git repository"

git $ARGS pull \
  && git $ARGS add \
    completed.data \
    pending.data \
    undo.data \
  && git $ARGS commit -m "Update task planning" \
  && git $ARGS push
