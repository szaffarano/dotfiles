#!/usr/bin/env bash


read -r -d '' USAGE << EOM
$(basename "$0") find a certain pattern in all pom.xml files

Usage:
    $0 <modules> <pattern> [<base dir>]

EOM
export USAGE


BASE=$( cd "$(dirname "$0")" || exit; pwd )

# shellcheck source=/dev/null
source "$BASE/common.sh"

checkParamsAtLeast $# 1

pattern="$1"

if [[ "$#" -gt 1 ]]; then
    dir="$2"
else
    dir="."
fi

[[ -d $dir ]] || die "$dir: must be a valid path" 1

find "$dir" -name pom.xml -exec ag -l "$pattern" {} \;
