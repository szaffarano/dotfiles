[include]
    path = ~/.gitconfig.local

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = red
	untracked = cyan

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
  loc = log --reverse --oneline --format="%h"
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	logo = log --pretty='format:%h %ad %s'
	ls = ls-files
	parent = log --pretty=%P -n 1 

	ign = ls-files -o -i --exclude-standard

	sho = show --name-only
  shf = show --name-only --format=""
	cpx = cherry-pick -x
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue

[apply]
	whitespace = nowarn

[diff]
	tool = vimdiff

[merge]
	tool = fugitive

[mergetool "fugitive"]
	prompt = false
	trustExitCode = true
    cmd = nvim -f -c "Gdiff" "$MERGED"

[difftool "vimdiff"]
	trustExitCode = true
    cmd = nvim -d $LOCAL $REMOTE

[push]
	default = simple

[log]
	date = iso
	abbrevCommit = true

[pull]
	ff = only
