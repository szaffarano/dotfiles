[include]
    path = ~/.gitconfig.local

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = red
	untracked = cyan

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	logo = log --pretty='format:%h %ad %s'
	ls = ls-files
	parent = log --pretty=%P -n 1 

	ign = ls-files -o -i --exclude-standard

	sho = show --name-only
	cpx = cherry-pick -x
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue

[apply]
	whitespace = nowarn

[diff]
	tool = meld

[merge]
	tool = meld

[mergetool]
	prompt = false

[difftool]
	prompt = no

[push]
	default = simple

[log]
	date = iso
	abbrevCommit = true
